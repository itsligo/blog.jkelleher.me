<ul>
    {% for related_path, score in related_pages %}
        {% set related = grav['pages'].get(related_path) %}
        {% if related %}
            <li class="related_pages_links">
                {# {% if config.plugins.relatedpages.show_score %}
                    <span class="score">{{ score }}</span>
                {% endif %} #}
                <a href="{{ related.url }}" title="{{ related.title }}">{{ related.title }} <span style="font-size:8px">({{related.date | date("M 'y")}})</span></a>
            </li>
        {% endif %}
    {% endfor %}
</ul>